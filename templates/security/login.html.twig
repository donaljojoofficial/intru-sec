{% extends 'base.html.twig' %}

{% block title %}Login - MyApp{% endblock %}

{% block body %}
<div class="form-box">
    <h1>Login</h1>

    {% if error %}
        <div class="form-error-message">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path('app_login') }}" method="post">
        <label for="email">Email</label>
        <input type="email" id="email" name="_username" value="{{ last_username }}" required autofocus />

        <label for="password">Password</label>
        <input type="password" id="password" name="_password" required />

        <button type="submit">Login</button>
    </form>

    <a href="{{ path('app_register') }}">Don't have an account? Register</a>
</div>
{% endblock %}

